<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">

        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-plus"></i> @Resource.Editar</h2>
                <div class="clearfix"></div>
            </div>

            <div class="x_panel">
                <div class="x_title">
                    <h2>@Resource.Dados</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content col-md-6 col-sm-6 col-xs-12">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                        <label asp-for="RazaoSocial">@Resource.RazaoSocial * </label>
                        <input asp-for="RazaoSocial" class="form-control" placeholder="@Resource.InformeRazaoSocial" maxlength="255">
                        <span asp-validation-for="RazaoSocial" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                        <label asp-for="NomeFantasia">@Resource.NomeFantasia</label>
                        <input asp-for="NomeFantasia" class="form-control" placeholder="@Resource.NomeFantasia" maxlength="255">
                        <span asp-validation-for="NomeFantasia" class="text-danger"></span>
                    </div>
                </div>

                <div class="x_content col-md-6 col-sm-6 col-xs-12">

                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                        <label asp-for="Cnpj">@Resource.CNPJ * </label>
                        <input asp-for="Cnpj" class="form-control" placeholder="@Resource.InformeCnpj" maxlength="20">
                        <span asp-validation-for="Cnpj" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                        <label asp-for="Email">@Resource.Email</label>
                        <input asp-for="Email" class="form-control" placeholder="@Resource.InformeEmail" maxlength="255">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                </div>

                <div class="x_content col-md-6 col-sm-6 col-xs-12">

                    <div class="form-group col-md-2 col-sm-2 col-xs-4">
                        <label asp-for="Ddd">@Resource.DDD</label>
                        <input asp-for="Ddd" class="form-control" maxlength="2">
                        <span asp-validation-for="Ddd" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4 col-sm-4 col-xs-8">
                        <label asp-for="Telefone">@Resource.Telefone</label>
                        <input asp-for="Telefone" class="form-control" maxlength="10">
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>

                </div>

            </div>

            <div class="x_panel">
                <div class="x_title">
                    <h2>@Resource.Endereco</h2>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content col-md-6 col-sm-6 col-xs-12">

                    <div class="form-group col-md-3 col-sm-3 col-xs-6">
                        <label asp-for="Cep">@Resource.CEP</label>
                        <input asp-for="Cep" class="form-control" maxlength="10">
                        <span asp-validation-for="Cep" class="text-danger"></span>
                    </div>

                </div>

                <div class="x_content col-md-6 col-sm-6 col-xs-12">

                    <div class="form-group col-md-3 col-sm-3 col-xs-6">
                        <label asp-for="Endereco">@Resource.Endereco</label>
                        <input asp-for="Endereco" class="form-control" maxlength="100">
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-3 col-sm-3 col-xs-6">
                        <label asp-for="Numero">@Resource.Numero</label>
                        <input asp-for="Numero" type="text" class="form-control" maxlength="6">
                        <span asp-validation-for="Numero" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-3 col-sm-3 col-xs-6">
                        <label asp-for="Complemento">@Resource.Complemento</label>
                        <input asp-for="Complemento" class="form-control" maxlength="100">
                        <span asp-validation-for="Complemento" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-3 col-sm-3 col-xs-6">
                        <label asp-for="Bairro">@Resource.Bairro</label>
                        <input asp-for="Bairro" class="form-control" maxlength="100">
                        <span asp-validation-for="Bairro" class="text-danger"></span>
                    </div>

                </div>

                <div class="x_content col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group col-md-3 col-sm-3 col-xs-6">
                        <label asp-for="Cidade">@Resource.Cidade</label>
                        <input asp-for="Cidade" class="form-control" maxlength="100">
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-3 col-sm-3 col-xs-6">
                        <label asp-for="Estado">@Resource.Estado</label>
                        <input asp-for="Estado" class="form-control" maxlength="100">
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="x_content col-md-6 col-sm-6 col-xs-12">
                <div class="x_panel">

                    <div class="form-group col-md-3 col-sm-3 col-xs-6">
                        <label asp-for="CategoriaId">@Resource.Categorias</label>
                        <select asp-for="CategoriaId" class="form-control"
                                asp-items="@(new SelectList(ViewBag.SelectCategorias,"Value","Text"))">
                            <option>Selecione uma Categoria</option>
                        </select>
                    </div>

                    <div class="form-group col-md-3 col-sm-3 col-xs-6">
                        <label asp-for="Ativo">@Resource.Status</label>
                        <p><input asp-for="Ativo" id="categoriaAtivo" data-on-text="@Resource.Ativo" data-off-text="@Resource.Inativo" data-off-color="danger" /></p>
                    </div>
                </div>
            </div>

            <div class="x_content col-md-6 col-sm-6 col-xs-12">
                <div class="form-group col-md-12">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp;@Resource.Salvar</button>
                    <a asp-action="Index" title="@Resource.Cancelar" class="btn btn-danger"><i class="fa fa-close"></i>&nbsp;@Resource.Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</div>